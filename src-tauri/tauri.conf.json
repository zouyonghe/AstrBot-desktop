{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AstrBot",
  "version": "4.18.0",
  "identifier": "com.astrbot.desktop.tauri",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "pnpm run prepare:resources",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../ui"
  },
  "app": {
    "windows": [
      {
        "title": "AstrBot",
        "width": 1280,
        "height": 800,
        "minWidth": 980,
        "minHeight": 680,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "wix": {
        "language": "zh-CN"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "compression": "zlib",
        "languages": [
          "SimpChinese",
          "English"
        ],
        "installerHooks": "windows/nsis-installer-hooks.nsh"
      }
    },
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "resources": {
      "../resources/backend": "backend",
      "../resources/webui": "webui",
      "windows/kill-backend-processes.ps1": "kill-backend-processes.ps1"
    }
  }
}
