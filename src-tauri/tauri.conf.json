{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AstrBot",
  "version": "4.17.5",
  "identifier": "com.astrbot.desktop.tauri",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "pnpm run prepare:resources",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../ui"
  },
  "app": {
    "windows": [
      {
        "title": "AstrBot",
        "width": 1280,
        "height": 800,
        "minWidth": 980,
        "minHeight": 680,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ],
    "resources": {
      "../resources/backend": "backend",
      "../resources/webui": "webui"
    }
  }
}
